{
  "name": "crave-search",
  "version": "0.1.0",
  "private": true,
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=22 <23"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "db:migrate": "turbo run db:migrate",
    "db:generate": "turbo run db:generate",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "ios:refresh": "IOS_DEVICE_UDID= IOS_DEVICE_NAME= IOS_SIMULATOR_UDID= IOS_SIMULATOR_NAME= bash ./scripts/ios-refresh.sh",
    "ios:device": "IOS_PREFER_DEVICE=1 IOS_RUN=0 bash ./scripts/ios-refresh.sh",
    "ios:device:install": "IOS_PREFER_DEVICE=1 IOS_RUN=1 bash ./scripts/ios-refresh.sh",
    "ios:device:reset": "IOS_PREFER_DEVICE=1 IOS_RUN=0 EXPO_RESET_CACHE=1 bash ./scripts/ios-refresh.sh",
    "ios:device:tunnel": "IOS_PREFER_DEVICE=1 IOS_RUN=0 EXPO_START_HOST=tunnel bash ./scripts/ios-refresh.sh",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "axios": "^1.8.1",
    "dotenv": "^17.2.1",
    "ioredis": "^5.5.0",
    "lefthook": "^1.11.2",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "turbo": "^1.10.0",
    "typescript": "^5.1.0",
    "@babel/core": "^7.20.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "24": "^0.0.0",
    "@babel/runtime": "^7.28.4",
    "expo": "~54.0.0",
    "expo-splash-screen": "~31.0.8",
    "expo-status-bar": "~3.0.7",
    "patch-package": "^8.0.0",
    "react": "19.1.0",
    "react-native": "0.81.5"
  }
}
